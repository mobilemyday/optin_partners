{% extends '@layout/template.html.twig' %}

{% block title %}mobile my day - optin{% endblock %}

{% block patnerLogo %}
	{% if partner is defined and partner %}
	<img class="logo" src="/img/logo-{{ partner }}.jpg" alt="Logo {{ partner }}" />
	{% endif %}
{% endblock %}

{% block content %}
<div class="title-container">
	<h1>
		{{ 'interest.confirmation.page.title'|translate }}
	</h1>
</div>
<section class="message-success-container">
	<p>{{ 'interest.confirmation.message'|translate }}</p>
	<p>{{ 'interest.confirmation.thanks'|translate }}</p>
	{% if interest is defined %}
		<p>{{ interest.token }}</p>
	{% endif %}
</section>
{% endblock %}